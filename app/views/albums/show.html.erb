

            <div class="card text-center" id="s">
                <div class="card-header">
                 <h3><%= @album.title %></h3>
                </div>
                     <div class="card-body">
                        <a href="/" class="btn btn-primary">Voltar Para Artistas</a>
                        <a href="/albums" class="btn btn-primary">Voltar Para Albuns</a>
                         <%= link_to 'Editar este Album' , edit_album_path(@album), class:"btn btn-primary"%>
                        <a href="/tracks/new" class="btn btn-primary">Add Musica</a>
                      </div>
                    </div>


        <% @album.tracks.each do |tracks| %>
          <div id="accordion">
            <div class="card">
              <div class="card-header" id="heading<%=tracks.id%>">
                <h5 class="mb-0">
                  <button class="btn btn-link collapsed" data-toggle="collapse" data-target="#collapse<%=tracks.id%>" aria-expanded="false" aria-controls="collapse<%=tracks.id%>" >
                    <%= tracks.name %>
                  </button>
                </h5>
              </div>
              <div id="collapse<%=tracks.id%>" class="collapse" aria-labelledby="heading<%=tracks.id%>" data-parent="#accordion">
                <div class="card-body">
                  <ul>

                    <li><b>Tipo de Midia:</b> <%=tracks.media_type.name %></li>
                    <li><b>Genero: </b><%=tracks.genre.name%></li>
                    <li><b>Compositor:</b> <%=tracks.composer %></li>
                    <li><b>Tamanho:</b> <%=number_to_human_size(tracks.bytes)%> </li>
                    <li><b>Tempo:</b> <%=tracks.milliseconds %></li>
                    <li><b>Pre√ßo: </b> <%= number_to_currency(tracks.unit_price, unit: 'R$', separator: ',') %></li>
                    <%= link_to 'Editar' , edit_track_path(tracks), class:"btn btn-warning"%>
                    <%= link_to "Remover", tracks, method: :delete, class: "btn btn-danger", data: { confirm: "Deseja remover permanentemente \"#{tracks.name}\"?"} %>

                    
                  </ul>
                </div>
              </div>
            </div>
          </div>
              <% end %>
