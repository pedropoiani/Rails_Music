<div class="card text-center" id="s" >
    <div class="card-header">
      <h3> Novo Artista </h3>
    </div>
    <div class="card-body">
      <a href="/artists" class="btn btn-dark">Voltar para Artistas</a>
      
    </div>
</div>


<% @artist.errors.full_messages.each do |error| %>
  <div class="alert alert-danger" role="alert">
    <%= error %>
  </div>
<% end %>
<%= form_for @artist, html: { multipart: true } do |f| %>
<b> Nome:</b><br>
<%= f.text_field :name, class:"form-control" %>
<p></p>
<%= f.submit("criar", :class => "btn btn-dark")  %>

<% end %>
