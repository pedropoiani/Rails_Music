<div class="card text-center" id="s" >
    <div class="card-header">
      <h3> Nova Música </h3>
    </div>
    <div class="card-body">
      <a href="/" class="btn btn-dark">Voltar Para Artistas</a>
      
    </div>
</div>

<h5> Nova Musica</h5>

<% @track.errors.full_messages.each do |error| %>
  <div class="alert alert-danger" role="alert">
    <%= error %>
  </div>
<% end %>


<%= form_for @track, html: { multipart: true } do |f| %>
<div class="form-group">
    <b> Albuns:</b><br>
    <%= f.collection_select(:album_id, Album.all, :id, :title, {},  
    {:class => 'custom-select'}) %>
  </div>

  <div class="form-group">
    <b> Tipo de Midia:</b><br>
    <%= f.collection_select(:media_type_id, MediaType.all, :id, :name, {},  
    {:class => 'custom-select'}) %>
  </div>

    <div class="form-group">
    <b> Genero: </b><br>
    <%= f.collection_select(:genre_id, Genre.all, :id, :name, {},  
    {:class => 'custom-select'}) %>
  </div>

<b> Nome da Música:</b><br>
<%= f.text_field :name %>
<p></p>

<b> Compositor:</b><br>
<%= f.text_field :composer %>
<p></p>

<b> Tamanho:</b><br>
<%= f.text_field :bytes %>
<p></p>

<b> Preço:</b><br>
<%= f.text_field :unit_price %>
<p></p>

<b> Duração:</b><br>
<%= f.text_field :milliseconds %>
<p></p>

<%= f.submit("criar", :class => "btn btn-dark")  %>

<% end %>
